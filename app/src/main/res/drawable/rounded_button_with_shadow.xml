<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:right="2dp" android:left="2dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- Slightly transparent black for shadow -->
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <!-- Button background -->
    <item>
        <shape >
            <solid android:color="@color/colorPrimary"/> <!-- Primary color for the button -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>
